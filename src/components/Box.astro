---
import { handleStyleProps, StyleProps } from '@/utils/handleStyleProps';
import type { HTMLTag, Polymorphic } from 'astro/types';

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }> & StyleProps;

const { as: Tag = 'div', style: ogStyle, ...props } = Astro.props;
const styles = { ...ogStyle, ...handleStyleProps(props) };
---

<Tag {...props} style={styles}>
	<slot />
</Tag>
